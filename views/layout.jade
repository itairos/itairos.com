	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
		- if (title.length > 0)
			title Itai Rosenberger &middot; #{title}
		- else
			title Itai Rosenberger
		meta(name="description", content="Itai Rosenberger's Personal Page")
		meta(name="viewport", content="width=device-width")

		block styles
			link(rel="stylesheet", href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css")
			link(rel="stylesheet", href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.min.css")
			link(rel="stylesheet", href="/stylesheets/main.min.css")

		block pre-scripts
			script(src='/javascripts/vendor/modernizr-2.6.2.min.js')

		body
			//if lt IE 7
				p.chromeframe
					| You are using an&nbsp;
					strong outdated
					| &nbsp;browser. Please&nbsp;
					a(href='http://browsehappy.com/') upgrade your browser
					| &nbsp;or&nbsp;
					a(href='http://www.google.com/chromeframe/?redirect=true') activate Google Chrome Frame
					| &nbsp;to improve your experience.

			div#wrap

				div.container

					div.masthead
						div.page-header
							h1.text-center Itai Rosenberger
					div.row
						ul.nav.nav-pills.pull-right
							li(class="#{title==='About' ? 'active' : ''}")
								a(href="/") <i class="icon-user"></i> About
							li(class="#{title==='Work' ? 'active' : ''}")
								a(href="/work") <i class="icon-coffee"></i> Work
					block content

				div#push

			div#footer
				div.container
					div#disclaimer-modal.modal.hide.fade(tabindex="-1", role="dialog", aria-labelledby="disclaimerModalLabel", aria-hidden="true")
						div.modal-header
							h3#disclaimerModalLabel.text-center Disclaimer
						div.modal-body
							p
								| This is a personal website and is <strong>not</strong> associated with my employer.
								| The opinions expressed here are my own and do not, in
								| any way, reflect the opinions of my employer.
						div.modal-footer
							button.btn(data-dismiss="modal", aria-hidden="true") Close
					p.muted.credit.text-center &copy; Itai Rosenberger #{year} &middot; Made in Seattle, WA <br/><a href="#disclaimer-modal" role="button" data-toggle="modal">Disclaimer</a> &middot; <a href="/work#thiswebsite">Credits</a>


		block post-scripts
			script(src='//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js')
			script.
				window.jQuery || document.write('<script src="/javascripts/vendor/jquery-1.9.1.min.js"><\/script>')
			script(src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js")
			script(src='/javascripts/plugins.js')
